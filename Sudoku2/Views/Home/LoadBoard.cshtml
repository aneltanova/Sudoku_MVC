
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
    <title>LoadBoard</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
</head>

<body>   
     <h1 class="title">@ViewBag.Name 's Sudoku</h1>        
     <div>
         <table align="center">
             @{int index = 0; }
             @for (int i = 0; i < 9; i++)
             {
                 <tr>
                     @for (int j = 0; j < 9; j++)
                     {
                         <td class="square" align="center"><input class="inputdis" type="number" name="Squares" readonly value="@ViewBag.SolvedBoard[index]"></td>

                         index++;
                     }
                 </tr>
             }
         </table>
         <input type="button" id ="button" class="restart" value="Back" onClick='location.href="/Home/Index"'  style="margin-left: 665px">
     </div>    
</body>
</html>
